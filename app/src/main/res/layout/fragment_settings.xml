<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ВЫБОР ТЕМЫ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тема приложения"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbThemeDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Базовая тема" />

            <RadioButton
                android:id="@+id/rbThemeOcean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ocean тема" />

            <RadioButton
                android:id="@+id/rbThemeSunset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunset тема" />

        </RadioGroup>

        <!-- Скорость игры -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Скорость игры"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <SeekBar
            android:id="@+id/sbGameSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="2" />

        <TextView
            android:id="@+id/tvGameSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 x" />

        <!-- Макс. количество тараканов -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Максимальное количество тараканов"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/sbMaxCockroaches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:progress="10" />

        <TextView
            android:id="@+id/tvMaxCockroaches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 шт" />

        <!-- Интервал бонусов -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Интервал появления бонусов"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/sbBonusInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="30"
            android:progress="10" />

        <TextView
            android:id="@+id/tvBonusInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 сек" />

        <!-- Длительность раунда -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Длительность раунда"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/sbRoundDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="120"
            android:progress="60" />

        <TextView
            android:id="@+id/tvRoundDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="60 сек" />

        <SeekBar
            android:id="@+id/sbDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4"
            android:progress="0" />
        <TextView
            android:id="@+id/tvDifficultyValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5" />

        <!-- Кнопка сохранения -->
        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить настройки"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>